<% layout("/layout/boilerplate.ejs") -%>

  <style>
  #filters{
    display: flex;
    flex-wrap: wrap;
    margin-right: 1rem;
    margin-top: 1rem;
    margin-bottom: 1rem;

  }

  .filter{
    text-align: center;
    margin-right: 2rem;
    cursor: pointer;
    opacity: 0.7;
    
  }
  .filter p{
    font-size: small;
  }
  .filter:hover{
    opacity: 1;
  }

  .taxGST{
    display: none;
  }

  #task-toogle{
    border: 1px solid black;
    border-radius: 2rem;
    height: 3rem;
    margin-left: auto;
    padding: 1rem;
    display: flex;
    align-items: center;
  }
</style>
<div id="filters">
  <div class="filter">
    <i class="fa-solid fa-bed"></i>
    <p>Bedrooms</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-city"></i>
    <p>Iconic city</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-umbrella-beach"></i>
    <p>Beach</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-plane"></i>
    <p>Flights</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-bath"></i>
    <p>Bathrooms</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-mountain"></i>
    <p>Mountains</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-plane"></i>
    <p>Flights</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-bath"></i>
    <p>Bathrooms</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-mountain"></i>
    <p>Mountains</p>
  </div>
  <div id="task-toogle">
    <div class="form-check-reverse form-switch">
    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
    <label class="form-check-label" for="switchCheckDefault">Show gst tax</label>
    </div>
  </div>  
</div>
  <form action="/listings/new" method="get">
    <!-- <button>Create New Listing</button> -->
  </form>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
     <%for(let listing of allListings) {%>
      <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col">
    <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.image.filename %>" style="height: 20rem;">
    <div class="card-body">
      <p class="card-text">
        <b><%= listing.title %></b> <br>
        <% if (listing.owner && listing.owner.username) { %>
          <small class="text-muted">Posted by: <%= listing.owner.username %></small><br>
        <% } %>
        Price:&#8377; <%= listing.price.toLocaleString() %>/ night <i class="taxGST"> + 18% GST</i><br>
        
        Location: <%= listing.location %> <br>
        Country: <%= listing.country %> <br>
      </p>
    </div>
    </div>
    </a>
  <%}%>
  </div>

  <script>
    const taxToogle=document.getElementById("switchCheckDefault");
    taxToogle.addEventListener("click", () => {
      const taxElement=document.getElementsByClassName("taxGST");
      for(info of taxElement){
        if(info.style.display!="inline"){
          info.style.display="inline";
        }else{
          info.style.display="none";
        }
        
      }
    })
  </script>

