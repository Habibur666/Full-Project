<% layout("/layout/boilerplate.ejs") -%>

  <style>
  #filters{
    display: flex;
    flex-wrap: nowrap; /* Ensure filters are in a single line */
    overflow-x: auto; /* Enable horizontal scrolling */
    margin-right: 1rem;
    margin-top: 1rem;
    margin-bottom: 1rem;
    gap: 1rem;
    align-items: center;
  }

  .filter{
    text-align: center;
    cursor: pointer;
    opacity: 0.7;
    flex-shrink: 0;
    min-width: 80px;
  }
  .filter p{
    font-size: small;
    margin: 0;
    margin-top: 0.25rem;
  }
  .filter i{
    font-size: 1.5rem;
  }
  .filter:hover{
    opacity: 1;
  }

  .taxGST{
    display: none;
  }

  #task-toogle{
    position: absolute; /* Keep GST toggle fixed on the right */
    right: 1rem;
    padding: 1rem;
    display: flex;
    align-items: center;
    flex-shrink: 0;
    white-space: nowrap;
  }


  /* Mobile Responsive - Filters */
  @media (max-width: 768px) {
    #filters {
      margin-right: 0.5rem;
      gap: 0.5rem;
    }
    
    .filter {
      min-width: 70px;
    }
    
    .filter p {
      font-size: 0.7rem;
    }
    
    .filter i {
      font-size: 1.2rem;
    }
  }

  @media (max-width: 576px) {
    #filters {
      flex-direction: row;
      overflow-x: auto;
      margin-right: 0.25rem;
      padding-bottom: 0.5rem;
    }
    
    .filter {
      min-width: 60px;
    }
    
    .filter p {
      font-size: 0.65rem;
    }
    
    .filter i {
      font-size: 1rem;
    }

    #task-toogle{
      background-color: rgb(255, 255, 255);
      /* opacity: 1; */
    }
  }
</style>
<div id="filters">
  <div class="filter">
    <i class="fa-solid fa-bed"></i>
    <p>Bedrooms</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-city"></i>
    <p>Iconic city</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-umbrella-beach"></i>
    <p>Beach</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-plane"></i>
    <p>Flights</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-bath"></i>
    <p>Bathrooms</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-mountain"></i>
    <p>Mountains</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-tent"></i>
    <p>Tent</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-hotel"></i>
    <p>Hotel</p>
  </div>
  <div class="filter">
    <i class="fa-solid fa-house"></i>
    <p>House</p>
  </div>
  <div id="task-toogle">
    <div class="form-check-reverse form-switch">
    <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
    <label class="form-check-label" for="switchCheckDefault">Show GST</label>
    </div>
  </div>  
</div>
  <form action="/listings/new" method="get">
  </form>
  <div class="container-fluid">
    <div class="row g-3 row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
     <%for(let listing of allListings) {%>
      <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col">
    <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.image.filename %>">
    <div class="card-body">
      <p class="card-text">
        <b><%= listing.title %></b> <br>
        <% if (listing.owner && listing.owner.username) { %>
          <small class="text-muted">Posted by: <%= listing.owner.username %></small><br>
        <% } %>
        Price:&#8377; <%= listing.price.toLocaleString() %>/ night <i class="taxGST"> + 18% GST</i><br>
        
        Location: <%= listing.location %> <br>
        Country: <%= listing.country %> <br>
      </p>
    </div>
    </div>
    </a>
  <%}%>
  </div>
</div>
  

  <script>
    const taxToogle=document.getElementById("switchCheckDefault");
    taxToogle.addEventListener("click", () => {
      const taxElement=document.getElementsByClassName("taxGST");
      for(info of taxElement){
        if(info.style.display!="inline"){
          info.style.display="inline";
        }else{
          info.style.display="none";
        }
        
      }
    })
  </script>

