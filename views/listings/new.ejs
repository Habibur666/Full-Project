<% layout("/layout/boilerplate.ejs") -%>

<div class="row">
  <div class="col-8 offset-2">
  <% layout("/layout/boilerplate.ejs") -%>
  <h3>Create a New Listing</h3>
  <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
    <div class="mb-3">
      <label for="title" class="form-label">Title:</label>
     <input type="text" id="title" name="title" class="form-control" placeholder="Add Crisy Title" required >
     <div class="valid-feedback">Title is awesome</div>
    </div>
    
    <div class="mb-3">
      <label for="description" class="form-label">Description:</label>
      <textarea id="description" name="description" class="form-control" required></textarea>
      <div class="invalid-feedback">Please give short description about this place</div>
    </div>

    <div class="mb-3">
      <label for="image" class="form-label">Upload Image</label>
      <input type="file" id="image" name="listing[image]" class="form-control">
    </div>
    
    <div class="row">
      <div class="mb-3  col-md-4">
        <label for="price" class="form-label">Price:</label>
        <input type="number" id="price" name="price" class="form-control" placeholder="1200" required>
        <div class="invalid-feedback">Please enter valid price</div>
      </div>

      <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country:</label>
        <input type="text" id="country" name="country" class="form-control" placeholder="INDIA" required>
        <div class="invalid-feedback">Please enter valid country</div>
      </div>
    </div>
    

    <div class="mb-3">
      <label for="location" class="form-label">Location:</label>
      <input type="text" id="location" name="location" class="form-control" placeholder="Murshidabad, West Bengal" required>
      <div class="invalid-feedback">Please enter valid location</div>
    </div>

    <button type="submit" class="btn btn-primary">Create Listing</button>
  </form>
  </div>
</div>